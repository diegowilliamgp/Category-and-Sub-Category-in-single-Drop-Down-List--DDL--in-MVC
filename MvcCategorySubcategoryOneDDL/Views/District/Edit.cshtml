@model MvcCategorySubcategoryOneDDL.Models.District

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="form-horizontal">
        <legend>District</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="control-group">
            @Html.LabelFor(model => model.DistrictName, new { @class = "control-label" })
            <div class="controls">
                @Html.EditorFor(model => model.DistrictName)
                @Html.ValidationMessageFor(model => model.DistrictName, null, new { @class = "help-inline" })
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.StateId, "StateId", new { @class = "control-label" })
            <div class="controls">
                @Html.DropDownList("StateId", String.Empty)
                @Html.ValidationMessageFor(model => model.StateId, null, new { @class = "help-inline" })
            </div>
        </div>

        <div class="form-actions no-color">
            <input type="submit" value="Save" class="btn" />
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

